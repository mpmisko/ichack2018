{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": "lib/", // XXX: Must also be changed in package.json
        "includePattern": ".+\\.js$"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "template": "node_modules/docdash",
        "destination": "docs/",
        "encoding": "utf8",
        "recurse": true,
        "private": true,
        "verbose": true
    }
}
